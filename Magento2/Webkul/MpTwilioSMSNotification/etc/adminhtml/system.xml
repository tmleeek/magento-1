<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="webkul" translate="label" sortOrder="1">
            <label>Webkul</label>
        </tab>
        <section id="marketplace" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
            <resource>Webkul_MpTwilioSMSNotification::config_mptwiliosmsnotification</resource>
            <group id="twiliosettings" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Marketplace Twilio Configuration Settings</label>
                <field id="enabled" translate="label comment" sortOrder="1" type="select" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enabled</label>
                    <source_model>Webkul\MpTwilioSMSNotification\Model\Config\Source\Status</source_model>
                </field>
                <field id="accountsid" translate="label comment" sortOrder="2" type="text" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Account SID</label>
                </field>
                <field id="authtoken" translate="label comment" sortOrder="3" type="text" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Auth Token</label>
                </field>
                <field id="twiliophonenumber" translate="label comment" sortOrder="4" type="text" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Twilio Phone Number</label>
                    <comment>Use number include + prefix</comment>
                </field>
            </group>
        </section>
    </system>
</config>