<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-right" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
	<head>
   		<css src="Webkul_MpDailyDeal::css/style.css"/>
	</head>
    <body>
        <referenceContainer name="content">
            <block class="Webkul\MpDailyDeal\Block\Product\SellerDealProducts" name="deals.products.list" as="deals_product_list" template="Webkul_Marketplace::collectionview.phtml">
            </block>
            <block class="Webkul\MpDailyDeal\Block\ViewOnCategory" name="category.vew.deals.products" as="deal_product_list" template="Webkul_MpDailyDeal::viewoncategory.phtml" cacheable="false" ></block>
        </referenceContainer>
        <referenceContainer name="sidebar.additional">
            <block class="Webkul\MpDailyDeal\Block\Product\SellerDealProducts" name="deals.of.day" as="top_deals_of_day" before="-" template="Webkul_MpDailyDeal::product/dealsofday.phtml" />
            <block class="Webkul\MpDailyDeal\Block\Product\SellerDealProducts" name="deals.topsale.list" 
                as="deals_topsale_products" after="top_deals_of_day" template="Webkul_MpDailyDeal::product/topviewdeals.phtml"/>
            <block class="Webkul\MpDailyDeal\Block\Product\SellerDealProducts" name="deals.topsale.list" as="deals_topsale_products" before="-" template="Webkul_MpDailyDeal::product/topsales.phtml"/>
            
        	<remove name="catalog.compare.sidebar" />
            <remove name="sale.reorder.sidebar"/>
            <remove name="wishlist"/>
        </referenceContainer>
    </body>
</page>