<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
     <head>
            <css src="Webkul_Stripe::css/style.css"/>
    </head>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Saved Stripe Cards</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Webkul\Stripe\Block\Cards" name="stripe.saved.cards.list" template="Webkul_Stripe::cards.phtml" cacheable="false"/>
        </referenceContainer>
    </body>
</page>