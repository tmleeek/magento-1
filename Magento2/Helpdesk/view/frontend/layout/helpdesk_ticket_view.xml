<?xml version="1.0" encoding="UTF-8"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
    	<referenceContainer name="columns.top" >
            <block class="Magento\Framework\View\Element\Html\Links" name="customer_account_navigation" before="-" template="Magento_Customer::account/navigation.phtml"></block>
        </referenceContainer>
        <referenceContainer name="content">
            <block name="helpdesk.ticket.view" class="Mirasvit\Helpdesk\Block\Ticket\View"
                   template="ticket/view.phtml" cacheable="false"/>
        </referenceContainer>
    </body>
</page>
